@model ItiUmplemFrigiderul.Models.FarmProduct



@if (ViewBag.Message != null)
{
    <div class="p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<div>
    <strong>Farm:</strong> @Model.Farm.Name<br />
    <strong>Product:</strong> @Model.Product.Name<br />
    <div class="media-body">
        <strong>Description:</strong>
        @Model.Product.Description
    </div>
    <img class="mr-3" src="@Model.Product.Photo" alt="@Model.Product.Name" style="width: 200px;">
</div>

<div class="card">


    @if ((ViewBag.AfisareButoane == true && @Model.Farm.UserId == ViewBag.UserCurent)
    || ViewBag.EsteAdmin == true)
    {
        <div class="d-flex flex-row justify-content-between">

            <a class="btn btn-success" asp-controller="FarmProducts" asp-action="Edit" asp-route-id="@Model.Id">Editeaza produs</a>

            <form method="post" asp-controller="FarmProducts" asp-action="Delete" asp-route-id="@Model.Id">

                <button class="btn btn-danger" type="submit">Sterge Produs</button>

            </form>

        </div>
    }

</div>

<br />
<br />




@foreach (var rev in Model.Reviews)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    <p>@rev.Content</p>
                    <div class="d-inline-flex">
                       

                    </div> 
                    <small>@rev.Date</small>
                    <strong><i class="bi bi-person"> @rev.User.UserName @rev.User.LastName</i></strong>

                </div>
                <br>

                @if (rev.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin == true)
                {
                    <div class="d-flex">
                        <div>
                            <a class="btn btn-outline-primary" asp-controller="Reviews" asp-action="Edit" asp-route-id="@rev.Id">
                                <i class="bi bi-pencil-square"></i> Editeaza
                            </a>

                        </div>
                        <div>
                            <form method="post" asp-controller="Reviews" asp-action="Delete" asp-route-id="@rev.Id">

                                <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>

                            </form>
                        </div>
                    </div>
                }

                <br />
            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}


@* Afisarea formularului in care se poate adauga un comentariu *@

<div class="container">

    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" asp-controller="FarmProducts" asp-action="Show">

                    <div class="card-body">

                        <input type="hidden" name="FarmProductId" value="@Model.Id" />

                        <label>Continut recenzie</label>
                        <br />

                        <textarea class="form-control" name="Content"></textarea>
                        <label asp-for="Rating">Rating:</label>
                        <input asp-for="Rating" class="form-control" />
                        <br /><br />

                        <button class="btn btn-success" type="submit">Adauga recenzia</button>

                    </div>

                </form>

            </div>

        </div>

        <div class="col-md-2"></div>

    </div>

</div>