@model ItiUmplemFrigiderul.Models.FarmProduct

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />

@if (ViewBag.Message != null)
{
    <div class="p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<div>
    <strong>Farm:</strong> @Model.Farm.Name<br />
    <strong>Product:</strong> @Model.Product.Name<br />
    <strong>Stock:</strong> @Model.Stock<br />

    <div class="media-body">
        <strong>Description:</strong>
        @Model.Product.Description
    </div>
    <img class="mr-3" src="@Model.Product.Photo" alt="@Model.Product.Name" style="width: 200px;">
    <strong>Rating:</strong> @Model.Rating<i class="fa-solid fa-star"></i><br />
</div>

<div class="card">


    @if ((ViewBag.AfisareButoane == true && @Model.Farm.UserId == ViewBag.UserCurent)
    || ViewBag.EsteAdmin == true)
    {
        <div class="d-flex flex-row justify-content-between">

            <a class="btn btn-success" asp-controller="FarmProducts" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

            <form method="post" asp-controller="FarmProducts" asp-action="Delete" asp-route-id="@Model.Id">

                <button class="btn btn-danger" type="submit">Delete</button>

            </form>

        </div>
    }

</div>

<br />
<br />



@*All Reviews*@
@foreach (var rev in Model.Reviews)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    <p>@rev.Content</p>
                    @for (int i = 1; i <= rev.Rating; i++)
                    {
                        <i class="fa-solid fa-star"></i>
                    }
                    <div class="d-inline-flex">
                       
                    </div> 
                    <p>@rev.Date</p>
                    <strong><i class="bi bi-person"> @rev.User.UserName @rev.User.LastName</i></strong>
                    
                </div>
                <br>

                 @if (rev.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin == true)
                 {
                    <div class="d-flex">
                        <div>
                            <a class="btn btn-outline-primary" asp-controller="Reviews" asp-action="Edit" asp-route-id="@rev.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                        </div>
                        <div>
                            <form method="post" asp-controller="Reviews" asp-action="Delete" asp-route-id="@rev.Id">

                                <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Delete</button>

                            </form>
                        </div>
                    </div>
                 }

                <br />
            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}


@*Add Review*@
@if (ViewBag.Autentificat)
{
    <div class="container">

        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div class="card">

                    <form method="post" asp-controller="FarmProducts" asp-action="Show">

                        <div class="card-body">

                            <input type="hidden" name="FarmProductId" value="@Model.Id" />

                            
                            <div class="containerstar">
                                <div class="stars">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>
                            </div>

                            <!-- Camp ascuns pentru valoarea ratingului -->
                            <input type="hidden" id="Rating" name="Rating" value="0" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                            <p ></p>
                            <label>Content</label>
                            <textarea class="form-control" name="Content"></textarea>
                            <br />

                            <button class="btn btn-success" type="submit">Add review</button>




                        </div>

                    </form>

                </div>

            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}