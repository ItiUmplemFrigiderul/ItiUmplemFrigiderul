@model ItiUmplemFrigiderul.Models.FarmProduct

@{

    ViewData["Title"] = "Edit Product";
    var farmId = Model.FarmId;
    var prodId = Model.ProductId;
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FarmId" value="@farmId"></input>
    <input type="hidden" asp-for="ProductId" value="@prodId"></input>
    <div class="form-group">
        <label asp-for="Price">Pret:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Stoc:</label>
        <input asp-for="Stock" class="form-control"></input>
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>