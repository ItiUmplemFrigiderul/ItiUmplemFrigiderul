@model IEnumerable<ItiUmplemFrigiderul.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h2>All Orders</h2>

<div class="container">
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <p>No orders available.</p>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="card mb-4" style="width:100%;">
                    <div class="card-body">
                        <h3 class="card-title alert-primary py-3 px-3 rounded2">
                            Order #@order.Id
                        </h3>
                        <div>
                            <strong>User:</strong> @(order.User?.UserName ?? "Unknown")<br />
                            <strong>Order Date:</strong> @order.Date.ToString("dd-MM-yyyy")<br />
                            <strong>Total Price:</strong> @order.Total lei
                        </div>
                        <div class="mt-3">
                            <a class="btn btn-info" asp-controller="Orders" asp-action="Show" asp-route-id="@order.Id">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

