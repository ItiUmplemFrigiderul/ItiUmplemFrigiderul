@model IEnumerable<ItiUmplemFrigiderul.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2 class ="logo text-center my-4">Categories</h2>
@if (ViewBag.AfisareButoane)
{
    <a asp-action="New" class="btn btn-success mb-3">Add New Category</a>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Show" asp-route-id="@item.Id" class="btn btn-info">All Products</a>
                    
                    @if (ViewBag.AfisareButoane)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <form method="post" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">

                            <button class="btn btn-danger" type="submit">Delete</button>

                        </form>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
