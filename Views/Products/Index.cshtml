@model IEnumerable<ItiUmplemFrigiderul.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"]">
        @TempData["message"]
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title alert-success py-3 px-3 rounded2">@product.Name</h3>
                    @if (product.Photo.Contains(".mp4") ||  product.Photo.Contains(".mov"))
                    {
                        <video width="550" height="300" controls>
                            <source src="@product.Photo" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    }
                    else
                    {
                        <div class="text-center">
                            <img src="@product.Photo" alt="Product Image"
                                 class="img-fluid rounded mb-3 shadow"
                                 style="width: 100%; max-width: 300px; height: auto; object-fit: cover; border-radius: 15px;">
                            
                        </div>
                    }
                    <div class="card-text">@product.Description</div>
                    <div class="d-flex justify-content-between flex-row mt-5">
                        <div>
                            <i class="bi bi-globe"></i>
                            @product.Category.CategoryName
                        </div>
                        <a class="btn btn-success"
                           href="/Products/Show/@product.Id">Afisare produs</a>
                    </div>
                </div>
            </div>
            <br />
            <br />
        }
    </div>

    <!-- Add Product Button visible only to Admins -->
    @if (User.IsInRole("Admin"))
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <a href="@Url.Action("New", "Products")" class="btn btn-success">Add New Product</a>
            </div>
        </div>
    }
</div>
