@model IEnumerable<ItiUmplemFrigiderul.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"]">
        @TempData["message"]
    </div>
}

@* Motorul de cautare *@
<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search topics or keywords" name="search"
               value="@ViewBag.SearchString">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </div>
</form>

<form method="get" action="/FarmProducts/Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <select name="sortOrder" class="form-select">
                <option>Selecteaza</option>
                <option value="price_asc">Preț crescător</option>
                <option value="price_desc">Preț descrescător</option>
                <option value="rating_asc">Rating crescător</option>
                <option value="rating_desc">Rating descrescător</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Sortează</button>
        </div>
    </div>
</form>

@*Afisare produse*@
<div class="container">
    <div class="row">
        @foreach (var product in ViewBag.Products)
        {
            <div class="card" style="width:33%; height:33%">
                <div class="card-body">
                    <h3 class="card-title alert-success py-3 px-3 rounded2">@product.Name</h3>
                    @if (product.Photo.Contains(".mp4") ||  product.Photo.Contains(".mov"))
                    {
                        <video width="550" height="300" controls>
                            <source src="@product.Photo" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    }
                    else
                    {
                        <div class="text-center">
                            <img src="@product.Photo" alt="Product Image"
                                 class="img-fluid rounded mb-3 shadow"
                                 style="height: 300px; width: auto; object-fit: cover; border-radius: 15px;">                            
                        </div>
                    }
                    <div class="card-text">@product.Description</div>
                    <div class="d-flex justify-content-between flex-row mt-5">
                        <div>
                            <i class="bi bi-globe"></i>
                            @product.Category.CategoryName
                        </div>
                        <a class="btn btn-success"
                           href="/Products/Show/@product.Id">Show product</a>
                    </div>
                </div>
                
            </div>
            <br />
            <br />
        }
    </div>

    <!-- Add Product Button visible only to Admins -->
    @if (User.IsInRole("Admin"))
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <a href="@Url.Action("New", "Products")" class="btn btn-success">Add New Product</a>
            </div>
        </div>
    }

    <div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item"> <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
                }

                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
